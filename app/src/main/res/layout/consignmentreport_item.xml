<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/surface_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/printBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/printer_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <!-- Use TableLayout to align label and value columns consistently -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:text="Consignment ID"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvconsignID"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Date and Time Stamp"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tv_dateandtimestamp"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Mill Name"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvmillname"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Fruit Type"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvFruit_Type"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Consignment Weight"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvconsignmentweight"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Vehicle Number"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvvehiclenumber"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Consignment Created By"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvcreatedby"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="CC Agent Name"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tvccagentname"
                            style="@style/header_h1_text_title_list_item"
                            android:textColor="@color/text_dark_gray" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:src="@mipmap/arrow_point_to_right" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
