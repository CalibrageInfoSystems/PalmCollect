                <LinearLayout
                    android:id="@+id/gradernamelinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp"
                    >

                    <TextView
                        style="@style/header_h1_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="1dp"
                        android:text="Grader Name :" />

                    <TextView
                        android:id="@+id/grader_name"
                        style="@style/header_h1_text_title_list_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <TextView

                    android:id="@+id/notRequired"
                    style="@style/header_h1_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Fingerprint not Required for this Collection Center"
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/nograders"
                    style="@style/header_h1_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="No Graders Available "
                    android:visibility="gone" />

                <TextView

                    android:id="@+id/verifyfingerprint"
                    style="@style/header_h1_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Verify Fingerprint"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView

                        android:id="@+id/imgverify_fingerprint"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/fingerprintdefaulttwo"
                        android:visibility="gone" />

                    <Button

                        android:id="@+id/btn_verifyfingerprint"
                        style="@style/basicBtnStyle"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Verify Fingerprint"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




            <Button

                android:id="@+id/btn_Submitverifyfingerprint"
                style="@style/basicBtnStyle"
                android:layout_width="300dp"
                android:layout_height="50dp"
android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Submit"
             />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>