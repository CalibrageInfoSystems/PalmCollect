<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StockTransfer.ReciveStockTransfer">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <Button
        android:layout_margin="25dp"
        android:id="@+id/scanner"
        style="@style/basicBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr_code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/qr_code"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:text=":"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ST Number"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:text=":"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/stNumber"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="From CC"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:text=":"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fromCC"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="To CC"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:text=":"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/toCC"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="NetWeight"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:text=":"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/netweight"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_top_layout"
        android:orientation="horizontal">

        <TextView
            style="@style/header_h1_text_title"
            android:layout_width="0dp"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/vehicle_number" />

        <EditText
            android:id="@+id/stRecVehicleNumber"
            style="@style/editTxt_normal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.3"
            android:digits="@string/aplhanumeric_type1"
            android:inputType="textCapCharacters"
            android:maxLength="10" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/confirmReceive"
            style="@style/basicBtnStyle"
            android:visibility="visible"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/confirm_receive" />


    </LinearLayout>

</LinearLayout>
    <TextView
        style="@style/header_h1_text_title"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:id="@+id/errorTv"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@drawable/background_stroke"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:textSize="25sp"
        android:text="You canâ€™t receive stock as the destination CC is not assigned to you" />


</LinearLayout>